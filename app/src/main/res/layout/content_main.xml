<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="britto.sandro.epiandroid.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="175dp"
        android:id="@+id/bgColor"
        android:src="#36abf4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />


    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/profilPicture"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/bgColor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Identity"
        android:layout_alignTop="@+id/profilPicture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="115dp"
    android:layout_marginTop="40dp"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/Cycle"
    android:layout_alignTop="@+id/profilPicture"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/Semester"
        android:layout_alignTop="@+id/profilPicture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="118dp"
        android:layout_marginTop="65dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/Promo"
        android:layout_alignTop="@+id/profilPicture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="168dp"
        android:layout_marginTop="90dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/Localisation"
        android:layout_alignTop="@+id/profilPicture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/LogTime"
    android:layout_alignBottom="@+id/bgColor"
    android:layout_alignLeft="@+id/profilPicture"
    android:layout_alignStart="@+id/profilPicture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="90dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/GPA"
        android:layout_alignBottom="@+id/LogTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notifications:"
        android:id="@+id/HistoryNotif"
        android:layout_below="@+id/bgColor"
        android:layout_toRightOf="@+id/LogTime"
        android:layout_toEndOf="@+id/LogTime"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="200dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/Title"
        android:layout_alignTop="@+id/profilPicture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/Date" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/User"
        android:layout_below="@+id/Content"
        android:layout_alignLeft="@+id/Title"
        android:layout_alignStart="@+id/Title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/Date"
        android:layout_below="@+id/Content"
        android:layout_toRightOf="@+id/HistoryNotif"
        android:layout_toEndOf="@+id/HistoryNotif" />

    <TextView
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="250dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/Content"
        android:layout_alignTop="@+id/profilPicture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
